<?xml version="1.0" encoding="UTF-8"?>
<project name="module_friendfinder" default="compile.module.friendfinder">
  <dirname property="module.friendfinder.basedir" file="${ant.file.module_friendfinder}"/>
  
  <property name="module.jdk.home.friendfinder" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.friendfinder" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.friendfinder" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.friendfinder" value="-encoding UTF-8 -source 1.7 ${compiler.args}"/>
  
  <property name="friendfinder.output.dir" value="${module.friendfinder.basedir}/out/production/FriendFinder"/>
  <property name="friendfinder.testoutput.dir" value="${module.friendfinder.basedir}/out/test/FriendFinder"/>
  
  <path id="friendfinder.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="friendfinder.module.production.classpath">
    <path refid="${module.jdk.classpath.friendfinder}"/>
    <pathelement location="${google-play-services_lib1.output.dir}"/>
    <pathelement location="${basedir}/../google_play_services/libproject/google-play-services_lib/libs/google-play-services.jar"/>
    <pathelement location="${basedir}/lib/postgresql-9.3-1102.jdbc41.jar"/>
  </path>
  
  <path id="friendfinder.runtime.production.module.classpath">
    <pathelement location="${friendfinder.output.dir}"/>
    <path refid="google-play-services_lib1.runtime.production.module.classpath"/>
    <pathelement location="${basedir}/../google_play_services/libproject/google-play-services_lib/libs/google-play-services.jar"/>
    <pathelement location="${basedir}/lib/postgresql-9.3-1102.jdbc41.jar"/>
  </path>
  
  <path id="friendfinder.module.classpath">
    <path refid="${module.jdk.classpath.friendfinder}"/>
    <pathelement location="${friendfinder.output.dir}"/>
    <pathelement location="${google-play-services_lib1.testoutput.dir}"/>
    <pathelement location="${google-play-services_lib1.output.dir}"/>
    <pathelement location="${basedir}/../google_play_services/libproject/google-play-services_lib/libs/google-play-services.jar"/>
    <pathelement location="${basedir}/lib/postgresql-9.3-1102.jdbc41.jar"/>
  </path>
  
  <path id="friendfinder.runtime.module.classpath">
    <pathelement location="${friendfinder.testoutput.dir}"/>
    <pathelement location="${friendfinder.output.dir}"/>
    <path refid="google-play-services_lib1.runtime.module.classpath"/>
    <pathelement location="${basedir}/../google_play_services/libproject/google-play-services_lib/libs/google-play-services.jar"/>
    <pathelement location="${basedir}/lib/postgresql-9.3-1102.jdbc41.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.friendfinder">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.friendfinder">
    <patternset refid="excluded.from.module.friendfinder"/>
  </patternset>
  
  <path id="friendfinder.module.sourcepath">
    <dirset dir="${module.friendfinder.basedir}">
      <include name="src"/>
      <include name="gen"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.friendfinder" depends="compile.module.friendfinder.production,compile.module.friendfinder.tests" description="Compile module FriendFinder"/>
  
  <target name="compile.module.friendfinder.production" depends="register.custom.compilers,compile.module.google-play-services_lib1" description="Compile module FriendFinder; production classes">
    <mkdir dir="${friendfinder.output.dir}"/>
    <javac2 destdir="${friendfinder.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.friendfinder}/javac">
      <compilerarg line="${compiler.args.friendfinder}"/>
      <bootclasspath refid="friendfinder.module.bootclasspath"/>
      <classpath refid="friendfinder.module.production.classpath"/>
      <src refid="friendfinder.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.friendfinder"/>
    </javac2>
    
    <copy todir="${friendfinder.output.dir}">
      <fileset dir="${module.friendfinder.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.friendfinder.basedir}/gen">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.friendfinder.tests" depends="register.custom.compilers,compile.module.friendfinder.production" description="compile module FriendFinder; test classes" unless="skip.tests"/>
  
  <target name="clean.module.friendfinder" description="cleanup module">
    <delete dir="${friendfinder.output.dir}"/>
    <delete dir="${friendfinder.testoutput.dir}"/>
  </target>
</project>