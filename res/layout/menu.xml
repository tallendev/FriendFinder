<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/purple"
        android:weightSum="5">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:textSize="40dp"
            android:textColor="@color/gold"
            android:layout_weight="1"
            android:text="Create an Event"
            android:id="@+id/textView" android:layout_gravity="center_horizontal"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:textSize="40dp"
            android:textColor="@color/gold"
            android:layout_weight="1"
            android:text="Search"
            android:id="@+id/textView2" android:layout_gravity="center_horizontal"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:textSize="40dp"
            android:textColor="@color/gold"
            android:layout_weight="1"
            android:text="View Profile"
            android:id="@+id/textView3" android:layout_gravity="center_horizontal"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:textSize="40dp"
            android:textColor="@color/gold"
            android:layout_weight="1"
            android:text="Settings"
            android:id="@+id/textView4" android:layout_gravity="center_horizontal"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:textSize="40dp"
            android:textColor="@color/gold"
            android:layout_weight="1"
            android:text="Log Out"
            android:id="@+id/textView5" android:layout_gravity="center_horizontal"/>
</LinearLayout>